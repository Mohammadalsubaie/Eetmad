FROM golang:1.21-alpine

WORKDIR /usr/src/app

# Install air for hot reloading
RUN go install github.com/cosmtrek/air@latest

# Copy go mod files
COPY go.mod go.sum* ./
RUN go mod download

# Copy source code
COPY . .

EXPOSE 3000

# Use air for hot reloading in development
CMD ["air", "-c", ".air.toml"]
